<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:id="@+id/all_tracks_btn"
            android:layout_margin="10dp"
            android:text="Voir tous les circuits"
            android:textSize="10sp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"/>
        <Constraint
            android:id="@+id/current_tracks_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/all_tracks_btn"
            android:orientation="vertical"
            android:visibility="gone"
            motion:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:id="@+id/all_tracks_btn"
            android:layout_margin="10dp"
            android:text="Voir tous les circuits"
            android:textSize="10sp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"/>
        <Constraint
            android:id="@+id/current_tracks_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/all_tracks_btn"
            android:orientation="vertical"
            android:visibility="visible"
            motion:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/all_tracks_btn" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start" />
</MotionScene>
